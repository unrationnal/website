---
interface Props {
	title: string
	lang? : string
	description? : string
}

const { title, lang, description } = Astro.props;

const language = lang ? lang : "en"

const Pagedescription = description ? description : `Unrationnal is an agency that explores the horizon of the latest technological innovations and harnesses them to help you enjoy them in the simplest way possible.`
---

<!doctype html>
<html lang={language}>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={Pagedescription} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="../../assets/vortex_logo.png" />
		<meta name="generator" content={Astro.generator} />
		<script src="https://kit.fontawesome.com/1882ba5dd5.js" crossorigin="anonymous" defer></script>
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>


