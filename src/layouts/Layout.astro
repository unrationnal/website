		font-size : 5vmin;
		// overflow-x: hidden;
		// width: 100vw;
		overflow: hidden;
		&::-webkit-scrollbar{
                width: 6px;
		}

		&::-webkit-scrollbar-thumb{
			background-color: #ab20fd;
			border-radius: 2px;
		}
		
		&::-webkit-scrollbar-track{
			background-color: transparent;
		}
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	main {
		position: absolute;
		z-index: 4;
		top : 0;
		left : 0;
		width: 100vw;
		height: 100vh;
		overflow-x: hidden;
		overflow-y: scroll;

		&::-webkit-scrollbar{
